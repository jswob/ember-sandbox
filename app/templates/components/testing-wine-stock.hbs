<h1>Wine Stock</h1>

<form>
  {{#x-select value=selectedWine class="dropdown" }}
    {{#each wines as |wine|}}
      {{#x-option value=wine}}{{ wine.name }} ({{ wine.quantity }}){{/x-option}}
    {{/each}}
  {{/x-select}}
</form>

<ul class="wines">
  {{#each wines as |wine|}}
    <li class="wine">{{ wine.name }} ({{ wine.quantity }})</li>
  {{/each}}
</ul>